<div class="row mt-4">
  <div class="col-md-6 post-list">
    <h2 class="dashboard">Dashboard</h2>
    {{#if posts.length}}
    <div class="container col-md-6 post-list">
      <h3>Current Posts:</h3>
    </div>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="card">
      <div class="col-md-8">
        <h3 class="postHeader card-header"><a href="/post/{{post.id}}">{{post.title}}</a></h3>
      </div>
      <div class="col-md-4 card-body">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="row mt-4">
    <h3 class="newPost">Create a New Post:</h3>

    <form class="createPost form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content" rows="3"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
  </div>


<script src="./js/dashboard.js"></script>
