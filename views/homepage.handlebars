<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 postCard">
  <div class="container">
  <div class="col-md-5">
    <h2>
      <a class="postTitle" href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p class="postBy">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">

  </div>
  <div class="col-md-7 postBox">
    <p>
      {{post.content}}
    </p>
  </div>
  </div>
</div>
{{/each}}
